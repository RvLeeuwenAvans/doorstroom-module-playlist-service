<!DOCTYPE html>
<html lang="nl">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon"
              href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22>
                  <text y=%221.2em%22 font-size=%2296%22>⚫️</text>
                  <text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}
    </head>
    <body>
        <nav id="positional_wrapper" class="relative">
            <div class="fixed z-20 bg-opacity-0 w-full">
                <div class="flex justify-end">
                    <input type="checkbox" name="hamburger" id="hamburger" class="peer hidden">
                    <label for="hamburger" class="peer-checked:hamburger relative z-20 p-6 cursor-pointer lg:hidden">
                        <div class="m-auto h-0.5 w-6 rounded bg-white transition duration-200"></div>
                        <div class="m-auto mt-2 h-0.5 w-6 rounded bg-white transition duration-200"></div>
                        <div class="m-auto mt-2 h-0.5 w-6 rounded bg-white"></div>
                    </label>
                    <div class="peer-checked:translate-x-0 fixed inset-0 translate-x-[-100%] lg:translate-x-0
                                      lg:relative bg-theme-blue lg:md:bg-opacity-0 sm:bg-opacity-95">
                        <div class="flex flex-col h-full items-center justify-center lg:flex-row text-white text-xl">
                            {% if app.user %}
                                <a class="pr-4 hover:text:theme-accent-2" href="{{ path('app_music_catalog') }}">Music Catalog</a>
                                <a class="pr-4" href="{{ path('app_shared_playlists') }}">Shared playlists</a>
                                <a class="pr-4" href="{{ path('app_user_playlists') }}">My playlists</a>
                                <a class="pr-4 text-theme-red" href="{{ path('app_logout') }}">Logout</a>
                            {% else %}
                                <a class="pr-4" href="{{ path('app_login') }}">Login</a>
                                <a class="pr-4" href="{{ path('app_register') }}">Register</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="w-full h-svh bg-no-repeat bg-cover"
             style="background-image:url('{{ asset('images/background.png') }}')">
            <div id="content_wrapper" class="w-full h-svh bg-theme-blue bg-opacity-90 overflow-scroll">
                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
