                                {#                                                    class="bg-theme-red text-white font-headingText p-2 h-full self-end">#}
                                {#                                                remove Playlist#}
                                {#                                            </button>#}
                                {#                                        </form>#}
                                {#                                    </div>#}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
{% endblock %}
