{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="flex flex-wrap h-screen justify-center items-center">
        <div id="positional_wrapper" class="relative h-auto w-2/3 lg:w-1/5">
            <div class="p-4 bg-theme-form-header flex justify-center w-full">
                <h1 class="font-headingText font-medium text-5xl text-theme-blue">Login</h1>
            </div>
            <div id="form_wrapper" class="relative z-10 p-4 bg-theme-form w-full">
                {% if error %}
                    <div class="p-4 mb-4 text-sm rounded-lg bg-theme-red bg-opacity-20  border-theme-red border"
                         role="alert">
                        <span class="text-theme-red font-bodyText">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </span>
                    </div>
                {% endif %}

                {{ form_start(loginForm) }}
                {{ form_row(loginForm.email, {'full_name':'_username'}) }}
                {{ form_row(loginForm.password, {'full_name':'_password'}) }}

                <button type="submit" class="w-full bg-theme-red p-2 text-white font-headingText">
                    LOGIN
                </button>
                {{ form_end(loginForm) }}
            </div>
            <img class="absolute z-0 inset-y-20 inset-x-16 w-full aspect-square rounded-3xl  h-full hidden lg:block"
                 src="{{ asset('images/background.png') }}" alt="art">
        </div>
    </div>
{% endblock %}
